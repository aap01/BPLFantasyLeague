<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myteam_snap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:background="#d5d6d6"
    android:padding="5dp"
    android:paddingBottom="8dp"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/myteam_snap_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <TextView
        android:id="@+id/myteam_snap_role"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/myteam_snap_name"
        android:layout_alignBottom="@+id/myteam_snap_name"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_toEndOf="@+id/myteam_snap_name"
        android:layout_toRightOf="@+id/myteam_snap_name" />

    <TextView
        android:id="@+id/myteam_snap_point"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/myteam_snap_role"
        android:layout_alignBottom="@+id/myteam_snap_role"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_toEndOf="@+id/myteam_snap_role"
        android:layout_toRightOf="@+id/myteam_snap_role" />

</RelativeLayout>